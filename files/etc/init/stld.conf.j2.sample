start on (filesystem and net-device-up IFACE=lo)
stop on runlevel [!2345]

respawn
respawn limit 10 5


setuid stld
setgid stld

script
  export RACK_ENV={{ ruby_env["RACK_ENV"] }}
  export RBENV_ROOT={{ ruby_env["RBENV_ROOT"] }}
  export RBENV_VERSION={{ ruby_env["RBENV_VERSION"] }}
  export PATH={{ ruby_env["PATH"] }}
  cd {{ app_root }}/current
  exec unicorn --config-file=${app_root}/current/config/unicorn.rb -E production
end script
